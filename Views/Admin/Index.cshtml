@model LinkedHUCENGv2.Models.AdminViewModels.AccountNotificationData;

<!DOCTYPE html>
<html lan="en" and dir="Itr">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Admin</title>
    <link rel="stylesheet" href="~css/admin.css?v=3.4.1"/>
</head>
<header>
    <div>
        <button class="meButton">Me</button>
    </div>
</header>

@{
    ViewData["Title"] = "Index";
}

<div class="notifications">
    @foreach (var notification in Model.Notifications)
    {
        <p>@notification.NotificationContent</p>
        <p>Registration Date: @notification.NotificationTime</p>

    }
</div>

<h1>Admin Panel</h1>
<div class="accounts">
<p>
    <a asp-action="Create">Add New User</a>
</p>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by name or mail: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Search" class="btn btn-default" /> |
            <a asp-action="Index">Back to Full List</a>
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>URL</th>
            <th>Phone Number</th>
            <th>Profile Photo</th>
            <th>Administrator</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Account Type</th>
            <th>Mail</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Accounts) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Url)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProfilePhoto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsAdmin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>