@model LinkedHUCENGv2.Models.Account

@{
    ViewData["Title"] = "Edit";
}
<head>
    <style>
        *{
            position:relative;
            font-family: 'Poppins',sans-serif;

            
        }
        body{
            background-color:#240046;
        }
        .row{
            position:absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            border-radius:20px;
            border:black solid 2px;
            width:30em;
            background-color:white;
            padding:20px;
        }
        
        input{

            border:black solid 2px;
            border-radius:20px;
           
        }
        .form-group{
            background-color:white;
            height:2em;
            display:grid;
            grid-template-columns:1fr 1fr 0fr;
            margin:20px;
            align-items:center;

            
        }
        .form-group input{
            padding:10px;
            
        }
        .form-group label{
            font-weight:bold;
            text-align:left;
        }
    </style>
</head>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Url" class="control-label"></label>
                <input asp-for="Url" class="form-control" />
                <span asp-validation-for="Url" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProfilePhoto" class="control-label"></label>
                <input asp-for="ProfilePhoto" class="form-control" />
                <span asp-validation-for="ProfilePhoto" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="AccountId" />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsAdmin" /> @Html.DisplayNameFor(model => model.IsAdmin)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="AccountType" class="control-label"></label>
                <input asp-for="AccountType" class="form-control" />
                <span asp-validation-for="AccountType" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group" style = "place-items:center">
                
                <input type="submit" value="Save" class="btn btn-primary" style = "display:block;text-align:center;border-radius:20px;border:black solid 2px;text-decoration:none;color:black;height:30px;width:7em;padding:0;font-size:1em;"/>
                <a asp-action="Index" style = "display:block;text-align:center;place-items:center;border-radius:20px;border:black solid 2px;text-decoration:none;color:black;height:30px;width:7em;font-size:1em;padding:0;box-sizing:border-box" >
                    <p style= "margin:auto;text-align:center;top:25%">
                        Cancel
                    </p>
                </a>
            </div>
        </form>
    </div>
   
</div>

