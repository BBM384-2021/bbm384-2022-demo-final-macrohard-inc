<!DOCTYPE html>
<html lan="en" and dir="Itr">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Admin</title>
    <link rel="stylesheet" href="~/css/admin.css" />
</head>
<body>

<div class="notifications">
    @foreach (var notification in ViewBag.Notifications)
    {
        <p>@notification.NotificationContent</p>
        <p>Registration Date: @notification.NotificationTime</p>

    }
</div>

<div class="accounts">
    @foreach (var user in ViewBag.UserList)
    {
        <div class="row">
            <div id="name-surname">
                <p style="margin-left: 10px"><strong>@user.FirstName @user.LastName</strong></p>
            </div>
            <div class="btn">
                <button><i class="fa fa-trash"></i></button>
            </div>
            <div class="btn">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseTwo" aria-expanded="false" aria-controls="flush-collapseTwo"><i class="fas fa-info-circle"></i></button>
            </div>
        </div>
        <div class="panel">
            <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne">
                <div class="accordion-body">
                    <p><strong>Email: </strong>@user.Email</p>
                    <p><strong>Phone Number: </strong>@user.PhoneNumber</p>
                    <p><strong>LinkedIn URL: </strong>@user.Url</p>
                    <p><strong>RegistrationDate: </strong>@user.RegistrationDate</p>
                </div>
            </div>
        </div>

    }

</div>

<script>
       const popup = document.getElementById("UserDetail");
       function closePop(){
              popup.style.visibility= "visible";
       }
       </script>

</body>
</html>
