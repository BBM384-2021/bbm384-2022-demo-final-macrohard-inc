                                </svg>
                            </a>
                            <a asp-action="DeleteOnFeed" asp-controller="Post" asp-route-id="@item.PostId" asp-route-userId="@item.PosterId" 
                            style = "font-weight:bold;text-decoration:none ; color:black" >
