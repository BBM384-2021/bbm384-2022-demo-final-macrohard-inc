                        <p style="font-weight: lighter; font-size: 13px;">@Model[0].Phone</p>
                        <p style="font-weight: lighter; font-size: 13px;">@Model[0].ProfileBio</p>
                    </div>
                </div >

                <div class = "line" style = "background-color: rgba(255, 255, 255, 0.3);" ></div>

