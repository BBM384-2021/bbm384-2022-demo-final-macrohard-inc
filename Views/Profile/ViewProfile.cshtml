                    <div class="settingsModal-container">
                         <input type="hidden" name="Id" value=@Model[0].Id>
                         <input type="text" placeholder="Firstname*" value="@Model[0].FirstName" name="FirstName">
                        <input type="text" placeholder="Lastname*" value="@Model[0].LastName" name="LastName">
                    </div>
                    <div>
                        <input type="number" placeholder="Phone Number*" value="@Model[0].Phone" name="Phone">
                    </div>
                    <div>
                        <input type="url" name="Url" placeholder="Linkedin Url*" value="@Model[0].Url">
                    </div>
                    <div>
                        <input type="text" name="ProfileBio" placeholder="Bio*" value="@Model[0].ProfileBio">
                    </div>
                    <div>
                        <input type="file" name="ProfilePhotoFile" >
                    </div>
                    

                </div>
                <div>
                    <div class="settingsModal-container" style="justify-items: center; align-items: center;">
                        <input style="width: 120px;height: 40px;background-color: #240046;border-radius: 30px;border: none;font-weight: bold;color: white;" value="Submit" type="submit">

